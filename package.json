{
  "name": "micro-survivors",
  "version": "1.0.3",
  "description": "tiny survivors-like game embeddable on any website",
  "main": "main.min.js",
  "types": "main.d.ts",
  "type": "commonjs",
  "scripts": {
    "minify:js": "uglifyjs -m -c --mangle-props keep_quoted --name-cache main.mangle-cache.json -o main.min.js main.js",
    "minify:html": "html-minifier --collapse-whitespace --remove-comments --remove-attribute-quotes --minify-js true --minify-css true index.src.html > index.html"
  },
  "author": "Jan Zipek <jan@zipek.cz>",
  "license": "MIT",
  "devDependencies": {
    "html-minifier": "^4.0.0",
    "prettier": "^3.3.3",
    "uglify-js": "^3.19.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SkaceKamen/micro-survivors.git"
  }
}
